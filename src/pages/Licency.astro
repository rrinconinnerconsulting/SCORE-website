---
import Layout from '../layouts/Layout.astro';
import '@fontsource/poppins';
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
---

<style>

    h1{
        color: #606060;
        font-weight: 700;
        font-size: 16px;
    }

    p{
        font-size: 14px;
        color: #606060;
    }

    h2{
        font-size: 16px;
        font-weight: 700;
        color: #606060;
    }

    li{
        font-size: 14px;
        list-style: none;
        color: #606060;
    }

    main{
				font-family: 'Poppins', sans-serif;	
		}

		.loader {
		position: fixed;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		z-index: 50;
		}

		.hidden {
		display: none;
		}

		.content {
		display: none;
		}

		.content.loaded {
		display: block;
		}

		#img-loader{
			margin: 0% auto;
			padding-top: 15rem;
		}
</style>

<Layout title="Terminos y condiciones">

    
        <div id="loader" class="loader  w-full h-full bg-white">
            <img id="img-loader" src="/public/loader_score.gif" alt="Cargando..." class="w-[400px]">
        </div>

        <script>
            // src/scripts.js
            document.addEventListener("DOMContentLoaded", function() {
            const loader = document.getElementById("loader");
            const content = document.getElementById("content");
    
            // Verifica si los elementos existen
            if (loader) {
                console.log("Loader encontrado");
            } else {
                console.error("Loader no encontrado");
            }
    
            if (content) {
                console.log("Content encontrado");
            } else {
                console.error("Content no encontrado");
            }
    
            if (loader && content) {
                // Simula una carga con un timeout (puedes eliminar esto en producción)
                setTimeout(() => {
                console.log("Añadiendo clases 'hidden' y 'loaded'");
                loader.classList.add("hidden");
                content.classList.add("loaded");
                }, 500); // Tiempo de simulación de carga (1 segundos)
            }
            });
    
        </script>

<div id="content" class="content hidden" >
<Nav></Nav>
