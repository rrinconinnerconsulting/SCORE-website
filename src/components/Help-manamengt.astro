</style>


<header>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const button = document.querySelector('#help-button');
            const menuOpen = document.querySelector('#help-open');
            const closeOpen = document.querySelector('#close-open');

            if (button && menuOpen && closeOpen) {
                button.addEventListener("click", () => {
                    if (menuOpen.classList.contains("hidden")) {
                        menuOpen.classList.remove("hidden");
                        menuOpen.classList.remove("fade-out");
                        menuOpen.classList.add("fade-in");
                    } else {
                        menuOpen.classList.remove("fade-in");
                        menuOpen.classList.add("fade-out");
                        setTimeout(() => {
                            menuOpen.classList.add("hidden");
                        }, 300); // La duración debe coincidir con la duración de la animación fadeOut
                    }
                });

                closeOpen.addEventListener("click", () => {
                    menuOpen.classList.remove("fade-in");
                    menuOpen.classList.add("fade-out");
                    setTimeout(() => {
                        menuOpen.classList.add("hidden");
                    }, 300); // La duración debe coincidir con la duración de la animación fadeOut
                });
            } else {
                console.error("Uno o más elementos no se encontraron en el DOM");
            }
        });
    </script>
</header>


