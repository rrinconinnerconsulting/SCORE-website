import '@fontsource/poppins';
---

<style>
  main{
          font-family: 'Poppins', sans-serif;	
  };

  body{
          font-family: 'Poppins', sans-serif;	
  };
  
</style>

<style>
  .text-card ,.pharagrph-container-shadow{
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 1); 
    }
    
</style>



<div>
  <div class=" w-[270px] overflow-hidden bg-center rounded-2xl">
      <img
      class="rounded-2xl"
      src="/src/assets/img/spad_line.jpg"
      alt="Spad Line"/>

      <div class="relative top-[-80px] flex justify-between items-center p-[10px]">
